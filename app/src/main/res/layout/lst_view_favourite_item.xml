<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/feedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/info"
            android:layout_width="406dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/notFoundFavFeed"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>

    <RelativeLayout
            android:id="@+id/feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bordersearch">

        <ImageView
                android:id="@+id/img_pic"
                android:layout_width="157dp"
                android:layout_height="118dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_launcher" />

        <ImageView
                android:id="@+id/img_logo"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_pic"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="-13dp"
                android:src="@mipmap/ic_launcher_sreality_logo" />

        <ImageView
                android:id="@+id/imageUnlike1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="-3dp"
                android:layout_marginLeft="-6dp"
                android:src="@drawable/ic_action_fav_like" />

        <ImageView
                android:id="@+id/imageDelete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_locality"
                android:layout_toRightOf="@+id/txt_price"
                android:src="@drawable/ic_action_delete" />

        <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_pic"
                android:paddingLeft="10dp"
                android:text="name"
                android:textColor="#313131"
                android:textSize="18sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/txt_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_toRightOf="@+id/img_pic"
                android:padding="10dp"
                android:text="locality"
                android:textColor="#808080"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/txt_price"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_locality"
                android:layout_toRightOf="@+id/img_pic"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:text="price"
                android:textColor="#313131"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/txt_note"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_pic"
                android:drawableLeft="@drawable/ic_action_localita"
                android:padding="10dp"
                android:textColor="#808080"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/notFound"
                android:layout_width="406dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/notExistFeed"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="29dp"
                android:textStyle="bold"
                android:visibility="gone"/>

    </RelativeLayout>

